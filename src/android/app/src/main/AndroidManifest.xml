<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.alexdenton.interviewd">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".InterviewdApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateQuestionActivity"
            android:parentActivityName=".DashboardActivity" />
        <activity
            android:name=".DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".CreateTemplateActivity"
            android:parentActivityName=".DashboardActivity"
            android:launchMode="singleTop"/>
        <activity
            android:name=".QuestionBankActivity"
            android:parentActivityName=".CreateTemplateActivity"
            android:launchMode="singleTop" />
    </application>

</manifest>