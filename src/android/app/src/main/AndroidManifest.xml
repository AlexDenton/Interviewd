<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.alexdenton.interviewd">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".InterviewdApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.alexdenton.interviewd.question.create.CreateQuestionActivity"
            android:parentActivityName=".dashboard.DashboardActivity" />
        <activity
            android:name=".dashboard.DashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme" />
        <activity
            android:name="io.github.alexdenton.interviewd.template.create.CreateTemplateActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".dashboard.DashboardActivity" />
        <activity
            android:name="io.github.alexdenton.interviewd.candidate.create.CreateCandidateActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".dashboard.DashboardActivity" />
        <activity
            android:name="io.github.alexdenton.interviewd.interview.create.CreateInterviewActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".dashboard.DashboardActivity" />
        <activity
            android:name="io.github.alexdenton.interviewd.interview.conduct.ConductInterviewActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".dashboard.DashboardActivity" />
        <activity
            android:name="io.github.alexdenton.interviewd.question.detail.QuestionDetailActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".dashboard.DashboardActivity" />
        <activity
            android:name="io.github.alexdenton.interviewd.candidate.detail.CandidateDetailActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".dashboard.DashboardActivity" />
        <activity
            android:name="io.github.alexdenton.interviewd.template.detail.TemplateDetailActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".dashboard.DashboardActivity" />
    </application>

</manifest>